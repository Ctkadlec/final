<h2>
    <i class="far fa-calendar-alt"></i>
    <%= @restaurant[:enjoyedon] %>
</h2>
<h1>Write Review for <%= @restaurant[:title] %></h1>

<form action="/restaurants/<%= @restaurant[:id] %>/reviews/create">
  <div class="form-group">
    <label>Did you eat in or takeout?</label>
    <select class="form-control" name="checkin">
      <option value="1">Eat in!</option>
      <option value="0">Takeout!</option>
    </select>
  </div>
  <div class="form-group">
    <label>Comments</label>
    <textarea class="form-control" rows="3" name="comments"></textarea>
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>